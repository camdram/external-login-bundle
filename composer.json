{
    "name": "acts/external-login",
    "description": "A bundle which allows users to log in using Facebook, Twitter, Google and Raven (Cambridge University). A bridge between acts/social-api-bundle and the Symfony2 security component.",
    "keywords": ["facebook", "twitter", "login", "external", "social", "google", "raven"],
    "type": "symfony-bundle",
    "license": "GPL-2.0",
    "authors": [
        {
            "name":     "Peter Hoyes",
            "email":    "pahoyes@gmail.com"
        }
    ],
    "require": {
        "php":             ">=5.3.0",
        "symfony/symfony": ">=2.3",
        "acts/social-api-bundle": "0.1"
    },
    "autoload": {
        "psr-0": {
            "Acts\\ExternalLoginBundle": ""
        }
    },
    "target-dir" : "/Acts/ExternalLoginBundle"
}

